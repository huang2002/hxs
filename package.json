{
  "name": "hxs",
  "version": "0.1.0",
  "description": "A simple programming language.",
  "module": "./dist/hxs.min.js",
  "main": "./dist/hxs.umd.min.js",
  "types": "./index.d.ts",
  "bin": "./cli.js",
  "author": "3h",
  "license": "MIT",
  "scripts": {
    "prebuild": "tsc",
    "build": "rollup -c",
    "postbuild": "terser dist/hxs.js --config-file terser.json --module -o dist/hxs.min.js && terser dist/hxs.umd.js --config-file terser.json -o dist/hxs.umd.min.js && node stat",
    "test": "node ./test/index.js",
    "docs": "dts2md \"**\" \"!index.d.ts\" -i ./types -o ./docs -l -I Home.md",
    "repl": "node cli repl",
    "help": "node cli --help"
  },
  "repository": "huang2002/hxs",
  "keywords": [
    "exp",
    "expression",
    "interpreter",
    "3h"
  ],
  "files": [
    "dist",
    "types",
    "index.d.ts"
  ],
  "devDependencies": {
    "3h-test": "^0.4.0",
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@rollup/plugin-babel": "^5.2.2",
    "dts2md": "^0.4.0",
    "rollup": "^2.36.1",
    "terser": "^5.5.1",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "3h-ast": "^0.4.1",
    "3h-cli": "^3.0.0"
  }
}
